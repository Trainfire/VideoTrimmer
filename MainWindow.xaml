<Window x:Class="VideoTrimmer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoTrimmer"
        mc:Ignorable="d"
        Title="Video Trimmer" Height="256" Width="430" ResizeMode="NoResize">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="0" Height="50" Orientation="Horizontal">
            <Button Content="Select file" Width="75" Click="ButtonFileOpen_Click" Margin="0,10,0,16"/>
            <Label Name="fileNameLabel" Content="No file selected" Width="329" Margin="0,10"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1" Height="50" Orientation="Horizontal">
            <Label Content="Start:" VerticalAlignment="Center"/>
            <TextBox Name="timecodeStart" Height="16" Text="00:00:00" Width="74" TextChanged="TextBox_TextChanged" TextAlignment="Center" MaxLength="8" MaxLines="1" VerticalAlignment="Center" />
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Height="50" Orientation="Horizontal">
            <Label Content="End:" VerticalAlignment="Center"/>
            <TextBox Name="timecodeEnd"  Height="16" Text="00:00:00" Width="74" TextChanged="TextBox_TextChanged" TextAlignment="Center" MaxLength="8" MaxLines="1" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Content="Trim video" VerticalAlignment="Top" Click="ButtonTrimVideo_Click" />

        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Content="About" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="42" Foreground="#FF0016F1" FontSize="10" Cursor="Hand" Background="{x:Null}" BorderBrush="{x:Null}" Click="ButtonShowAbout_Click" />
    </Grid>
</Window>
